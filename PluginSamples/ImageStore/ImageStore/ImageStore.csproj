<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <LangVersion>10</LangVersion>
    <Nullable>enable</Nullable>
    <Authors>Canon Inc.</Authors>
    <Company>Canon Inc.</Company>
    <Product>Image Store</Product>
    <Copyright>© 2020 Canon Inc.</Copyright>
    <Version>1.0.0.0</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="docfx.console" Version="2.59.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="MilestoneSystems.VideoOS.Platform" Version="22.2.0" />
    <PackageReference Include="NLog" Version="5.0.1" />
    <PackageReference Include="NLog.Schema" Version="5.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="ImageStoreSettings.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="NLog.dll.nlog">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="plugin.def">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="md &quot;$(ProgramW6432)\Milestone\MIPPlugins\$(ProjectName)&quot; &gt; NUL 2&gt;&amp;1&#xD;&#xA;del /q /s &quot;$(ProgramW6432)\Milestone\MIPPlugins\$(ProjectName)&quot;&#xD;&#xA;xcopy /e &quot;$(TargetDir)*&quot; &quot;$(ProgramW6432)\Milestone\MIPPlugins\$(ProjectName)&quot;&#xD;&#xA;" />
  </Target>

</Project>
